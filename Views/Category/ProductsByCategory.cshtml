@model CategoryViewModel

@{
    ViewBag.PageTitle = Model.Category.Name;
}

<h3>@Model.Category.Name</h3>
<p class="fs-5">Список товаров</p>

<hr />
<a class="link-underline link-underline-opacity-0" asp-controller="Category" asp-action="Categories">
    <i class="bi bi-caret-left-fill"></i>
    Вернуться к категориям
</a>
<hr />

<div class="container-fluid">
    <div class="row row-cols-3">
        @foreach (Product product in Model.Products)
        {
            <div class="col">
                <a class="link-underline link-underline-opacity-0" asp-controller="Product" asp-action="Index" asp-route-id="@product.Id">
                    <div class="card">
                        <img class="card-img-top" src="@product.ImageUrl" style="width: 100%; height: 10vw; object-fit: cover;" />
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>

                            @if (!string.IsNullOrEmpty(product.Description))
                            {
                                <p class="card-text">@product.Description</p>
                            }

                            @Html.CreatePriceBox(product.Price)
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>