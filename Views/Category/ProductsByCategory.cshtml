@model IEnumerable<Product>

@{
    ViewBag.PageTitle = "Список товаров";
}

<h3>Список товаров</h3>
<hr />
<a class="link-underline link-underline-opacity-0" asp-controller="Category" asp-action="Categories">
    <i class="bi bi-caret-left-fill"></i>
    Вернуться к категориям
</a>
<hr />

<div class="container-fluid">
    <div class="row row-cols-3">
        @foreach (Product product in Model)
        {
            <div class="col">
                <div class="card">
                    <img class="card-img-top" src="@product.Image" style="width: 100%; height: 10vw; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>

                        @if (!string.IsNullOrEmpty(product.Description))
                        {
                            <p class="card-text">@product.Description</p>
                        }

                        <span class="btn btn-outline-dark">@product.Price ₽</span>
                    </div>
                </div>
            </div>
        }
    </div>
</div>